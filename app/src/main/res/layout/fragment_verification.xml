<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        tools:context=".fragment.VerificationFragment">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/_320sdp"
            android:layout_height="@dimen/_210sdp"
            android:layout_marginTop="-20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_home_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/poppins"
            android:text="RentPayz"
            android:textColor="#ffff"
            android:textSize="@dimen/_26sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Login to contiune"
            android:textColor="#ffffff"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="We have sent OTP on your register\nmobile Number"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_65sdp"
            android:layout_marginBottom="-3dp"
            android:src="@drawable/ic_bottom_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/verifyButton"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginBottom="28dp"
            android:backgroundTint="#F3B007"
            android:fontFamily="@font/poppins"
            android:text="Verify Now"
            android:textAllCaps="false"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/codeTextOne"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#ffffff"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/codeTextTwo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#ffffff"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintStart_toEndOf="@+id/codeTextOne"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/codeTextThree"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#ffffff"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintStart_toEndOf="@+id/codeTextTwo"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/codeTextFour"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#ffffff"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintStart_toEndOf="@+id/codeTextThree"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/codeTextFive"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#ffffff"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintStart_toEndOf="@+id/codeTextFour"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/codeTextSix"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#ffffff"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintStart_toEndOf="@+id/codeTextFive"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />


        <TextView
            android:id="@+id/countText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins"
            android:text="15 Sec Left"
            android:textColor="#fff"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/codeTextThree" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/poppins"
            android:text="Don't receive OTP?"
            android:textColor="#ffffff"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/countText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/resendCodeButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins"
            android:text="Resend again"
            android:textAllCaps="false"
            android:textColor="#F3B007"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/countText" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            app:lottie_rawRes="@raw/success_animation"
            android:visibility="gone"
            app:lottie_speed="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>